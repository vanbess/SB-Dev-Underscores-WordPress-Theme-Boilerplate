{
  "name": "_s",
  "version": "1.9.4",
  "description": "I'm the next, most awesome, WordPress theme out there.",
  "author": "artcom venture GmbH",
  "license": "GPL-2.0-or-later",
  "keywords": [
    "WordPress",
    "Theme"
  ],
  "homepage": "https://github.com/artcomventure/_s",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/artcomventure/_s.git"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.4",
    "@babel/core": "^7.23.3",
    "@babel/preset-env": "^7.23.3",
    "@wordpress/icons": "^9.37.0",
    "@wordpress/scripts": "^26.17.0",
    "autoprefixer": "^10.4.16",
    "babel-preset-minify": "^0.5.2",
    "browser-sync": "^2.29.3",
    "fantasticon": "^2.0.0",
    "node-sass": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0"
  },
  "scripts": {
    "browser-sync": "browser-sync http://localhost --files **/*.css,**/*.min.js,**/*.php --no-open",

    "watch": "npm run watch:scss & npm run watch:js & npm run browser-sync",
    "watch:scss": "node-sass css/ -o . --source-map true --output-style expanded --indent-type tab --indent-width 1 -w & (cd utilities/inc/gutenberg && npm run gutenberg:watch:scss)",
    "watch:js": "babel js -d js --out-file-extension .min.js --source-maps --ignore=js/**/*.min.js --presets=@babel/preset-env --watch",

    "build": "npm run build:scss & npm run build:js",
    "build:scss": "node-sass css/style.scss -o . --output-style compressed & (cd utilities/inc/gutenberg && npm run gutenberg:build:scss)",
    "build:js": "babel js -d js --out-file-extension .min.js --no-comments --ignore=js/**/*.min.js --presets=@babel/preset-env,babel-preset-minify",

    "i18n:pot": "wp i18n make-pot . languages/_s.pot --exclude=src,node_modules,**/*.min.*",
    "i18n:po": "wp i18n update-po languages/_s.pot languages",
    "i18n:mo": "wp i18n make-mo languages languages",
    "i18n:json": "wp i18n make-json languages --no-purge",

    "icont:generate": "cd media/fonts/Icont && npm run generate"
  },
  "dependencies": {
    "normalize.css": "^8.0.1"
  }
}
